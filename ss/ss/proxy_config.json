{
  "comment": "转发服务并发控制配置文件",
  "target": {
    "host": "ssrf-proxy.vke-system",
    "port": 8888
  },
  "listen": {
    "host": "0.0.0.0",
    "port": 8080
  },
  "concurrency": {
    "max_concurrent_requests": 50,
    "max_queue_size": 100,
    "comment": "根据服务器性能调整。推荐值为 CPU核心数 * 10-20"
  },
  "timeout": {
    "connect_timeout": 10,
    "read_timeout": 300,
    "comment": "read_timeout设置为300秒(5分钟)以匹配你的需求"
  },
  "connection_pool": {
    "pool_connections": 20,
    "pool_maxsize": 50,
    "comment": "连接池大小，复用连接提高性能"
  },
  "retry": {
    "max_retries": 2,
    "retry_backoff_factor": 0.5,
    "comment": "失败自动重试配置"
  },
  "circuit_breaker": {
    "threshold": 5,
    "timeout": 60,
    "comment": "连续失败5次后熔断60秒，保护后端服务"
  }
}
